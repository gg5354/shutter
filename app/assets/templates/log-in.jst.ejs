<div id="sign-in-modal" class="modal fade" ng-controller="UserCtrl">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-body">
        <form>
          <div class="form-group">
            <input type="email" class="form-control" placeholder="Enter email" ng-model="user.email">
          </div>
          <div class="form-group">
            <input type="password" class="form-control" placeholder="Password" ng-model="user.password">
          </div>

          <button type="submit" class="btn btn-primary" ng-click="signIn()">Sign In</button>
        </form>
      </div>
    </div>
  </div>
</div>
